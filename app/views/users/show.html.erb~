      <% else %>
        <p>Here could be your avatar</p>
      <% end %>
      <p>My email:<span class ="profile"><%= @user.email %><span></p>
    </section>
  </aside>
</div>
<% if @user = current_user %>
  <p id="show-advice">My advice:</p>
  <%= link_to "Create new advise", new_hotel_path %>
  <% if @user.hotels.empty? %>
    <p>I have no advice yet</p>
  <% end %>
<% else %>
  <p id="show-advice">His advice:</p>
<% end %>
<% @user.hotels.each do |f| %>
  <h2><%= f.title %></h2>
  <p><%= image_tag f.image_url(:thumb) %>
    <ul>
      <li>Star rating hotels - <%= f.star_rating %></li>
      <li>Average price for room - <%= f.price_for_room %> $</li>
      <li>Is breakfast included? - 
  	    <% if f.breakfast_included? %>
  	      <span>Yes</span>
  	    <% else %>
    	    <span>No</span>
  	    <% end %>
      </li>
    </ul>
  </p>
<%= link_to "Details", hotel_path(f) %>
<% end %>

