<%= provide(:title, @user.name) %>

<div>
  <aside>
    <section>
      <h1>
        <%= @user.name %>
      </h1>
      <% if @user.avatar_url %>
        <div class="profile-avatar"><%= image_tag @user.avatar_url(:avatar) %></div>
      <% else %>
        <%= image_tag("miss_avatar.png", alt: @user.name, width: 150, height: 200) %>
      <% end %>
      <p>My email:<span class ="profile"><%= @user.email %><span></p>
    </section>
  </aside>
</div>
<% if @user == current_user %>
  <p id="show-advice">My advice:</p>
  <%= link_to "Create new advise", new_hotel_path %>
  <% if @user.hotels.empty? %>
    <p>I have no advice yet</p>
  <% end %>
<% else %>
  <p id="show-advice">His advice:</p>
<% end %>
<% @user.hotels.each do |f| %>
  <%= render "/hotels/index", f: f %>  
<% end %>

